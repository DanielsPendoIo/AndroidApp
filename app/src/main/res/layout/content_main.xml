<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="70dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="108dp"
        android:layout_height="70dp"
        android:text="What is"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/PercentageTxt"
        app:layout_constraintEnd_toEndOf="@+id/PercentageTxt"
        app:layout_constraintStart_toStartOf="@+id/PercentageTxt"
        app:layout_constraintTop_toBottomOf="@+id/totalTextView"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/PercentageTxt"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="Enter percantage"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textQQ"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="345dp"
        android:text="%"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textQQ"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/PercentageTxt"
        app:layout_constraintStart_toStartOf="@+id/textQQ"
        app:layout_constraintTop_toBottomOf="@+id/totalTextView" />

    <TextView
        android:id="@+id/textQQ"
        android:layout_width="108dp"
        android:layout_height="0dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="33dp"
        android:text="QQqq"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/NumbrtTxt"
        app:layout_constraintEnd_toEndOf="@+id/NumbrtTxt"
        app:layout_constraintStart_toStartOf="@+id/NumbrtTxt"
        app:layout_constraintTop_toBottomOf="@+id/PercentageTxt" />

    <EditText
        android:id="@+id/NumbrtTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="156dp"
        android:ems="10"
        android:hint="Enter Number"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CalcBtn"
        app:layout_constraintStart_toStartOf="@+id/CalcBtn"
        app:layout_constraintTop_toBottomOf="@+id/textQQ" />

    <Button
        android:id="@+id/CalcBtn"
        android:layout_width="234dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:background="#FFD72B4B"
        android:text="CALCULATE"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NumbrtTxt" />

</android.support.constraint.ConstraintLayout>